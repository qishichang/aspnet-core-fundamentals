
@{
    ViewData["Title"] = "Create Game";
}

<h2>Create Game</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label class="control-label">City</label>
                <input class="form-control" name="gameCity" value="Seattle" />
            </div>
            <div class="form-group">
                <label class="control-label">Player 1 Name</label>
                <input class="form-control" name="p1Name" value="Superman" />
            </div>
            <div class="form-group">
                <label class="control-label">Player 1 Rank</label>
                <input class="form-control" name="p1Rank" value="101" />
            </div>
            <div class="form-group">
                <label class="control-label">Player 2 Name</label>
                <input class="form-control" name="p2Name" value="Ironman" />
            </div>
            <div class="form-group">
                <label class="control-label">Player 2 Rank</label>
                <input class="form-control" name="p2Rank" value="202" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
