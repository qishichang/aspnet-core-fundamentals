@model List<ASPNETCoreFundamentals.Models.Transformer>
@{
    ViewData["Title"] = "Index";
}

<h2>Roles in Transformer Movie</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Location</th>
            <th>Color</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.ID</td>
                <td>@t.Name</td>
                <td>@t.Location</td>
                <td>@t.Color</td>
            </tr>
        }
    </tbody>
</table>

